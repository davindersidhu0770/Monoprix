<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray">

    <com.production.monoprix.util.TextviewBold
            android:id="@+id/txt_st_how"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/twenty"
            android:layout_marginEnd="@dimen/twenty"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/fifty"
            android:text="@string/s_how_it"
            android:textColor="@color/black"
            android:textSize="@dimen/twentysp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <com.production.monoprix.util.TextviewBold
            android:id="@+id/txt_continue"
            android:layout_width="match_parent"
            android:layout_height="44sp"
            android:layout_marginStart="@dimen/twenty"
            android:layout_marginTop="@dimen/thirty"
            android:layout_marginEnd="@dimen/twenty"
            android:layout_marginBottom="@dimen/fifty"
            android:background="@drawable/red_rectangle_corner_back"
            android:gravity="center"
            android:lineSpacingExtra="1sp"
            android:text="@string/continuet"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_st_how" />
</androidx.constraintlayout.widget.ConstraintLayout>