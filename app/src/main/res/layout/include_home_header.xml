<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_40sdp"
    app:cardBackgroundColor="@color/theme"
    app:cardCornerRadius="-1dp"
    app:cardElevation="8dp"
    app:layout_constraintTop_toTopOf="parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_left_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/twenty"
            android:src="@drawable/menu" />

        <ImageView
            android:id="@+id/ivheader_icon"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/appicon"
            android:visibility="visible">

        </ImageView>

        <com.production.monoprix.util.TextviewRegular
            android:id="@+id/txt_title"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/txt_lan"
            android:layout_toRightOf="@+id/img_left_arrow"
            android:gravity="center"
            android:text="@string/home_st"
            android:textColor="@color/white"
            android:textSize="@dimen/twentysp" />

        <com.production.monoprix.util.TextviewBold
            android:id="@+id/txt_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_title"
            android:layout_marginStart="@dimen/thirty"
            android:layout_toEndOf="@+id/img_left_arrow"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/twelve"
            android:visibility="gone" />

        <com.production.monoprix.util.TextviewBold
            android:id="@+id/txt_lan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/twenty"
            android:drawableEnd="@drawable/ic_down_arrow"
            android:drawableTint="@color/white"
            android:gravity="center_vertical"
            android:text="@string/en"
            android:textColor="@color/white"
            android:textSize="@dimen/sixteensp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/img_three_dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingStart="@dimen/twenty"
            android:paddingTop="@dimen/ten"
            android:paddingEnd="@dimen/twenty"
            android:paddingBottom="@dimen/twenty"
            android:src="@drawable/ic_three_dots"
            android:visibility="gone" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>