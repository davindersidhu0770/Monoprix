<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_store_marker"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <com.production.monoprix.util.TextviewRegular
        android:id="@+id/marker_text1"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="-8sp"
        android:layout_toEndOf="@+id/marker_image"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@android:color/black"
        android:textSize="12sp" />

    <com.production.monoprix.util.TextviewRegular
        android:id="@+id/marker_text"
        android:layout_below="@+id/marker_text1"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="-8sp"
        android:layout_toEndOf="@+id/marker_image"
        android:background="@drawable/drawablestroke"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@android:color/black"
        android:textSize="12sp" />

    <ImageView
        android:layout_marginTop="-10sp"
        android:id="@+id/marker_image"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_below="@+id/marker_text"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/_30sdp"
        android:src="@drawable/map_pin3" />

    <com.production.monoprix.util.TextviewRegular
        android:id="@+id/tv"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/marker_image"
        android:layout_gravity="center"
        android:layout_marginLeft="-8sp"
        android:layout_toRightOf="@+id/marker_image"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@android:color/black"
        android:textSize="12sp" />


</RelativeLayout>